{
  "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
  "root": true,
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "master",
    "root": ".",
    "enabled": true,
    "useIgnoreFile": false
  },
  "files": {
    "includes": ["**/*.{ts,tsx,json,jsonc,css,html,md,mdx}"]
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "attributePosition": "auto",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "expand": "auto",
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "useEditorconfig": false
  },
  "css": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf"
    }
  },
  "html": {
    "formatter": {
      "enabled": true,
      "indentScriptAndStyle": false,
      "selfCloseVoidElements": "always",
      "whitespaceSensitivity": "css",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf"
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "arrowParentheses": "always",
      "jsxQuoteStyle": "single",
      "lineWidth": 120,
      "operatorLinebreak": "before",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all",
      "attributePosition": "auto",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "expand": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineEnding": "lf",
      "quoteStyle": "single"
    },
    "jsxRuntime": "reactClassic"
  },
  "json": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "none",
      "bracketSpacing": true,
      "expand": "auto",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80,
      "lineEnding": "lf"
    }
  }
}
